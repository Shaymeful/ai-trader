# Trading mode: mock (offline) or alpaca (requires API keys)
MODE=mock

# Alpaca credentials (only needed for MODE=alpaca)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Risk parameters
MAX_POSITIONS=5
MAX_ORDER_QUANTITY=100
MAX_DAILY_LOSS=1000

# Allowed symbols (comma-separated)
ALLOWED_SYMBOLS=AAPL,MSFT,GOOGL,AMZN,TSLA

# Strategy parameters
SMA_FAST_PERIOD=10
SMA_SLOW_PERIOD=30

# Logging
LOG_LEVEL=INFO
